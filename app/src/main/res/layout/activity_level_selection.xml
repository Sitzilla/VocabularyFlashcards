<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.evansitzes.vocabularyflashcards.ui.LevelSelectionActivity"
                android:background="@drawable/gradient">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Group of Words"
        android:id="@+id/mainTextView"
        android:textColor="#efb200"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="true"
        android:layout_marginBottom="30dp"
        style="@style/header_text"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Basic Word List"
        android:id="@+id/selectionButtonOne"
        android:background="@drawable/button_background"
        style="@style/button_text"
        android:layout_below="@+id/mainTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="75dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backButton"
        android:background="@drawable/back_button_background"
        style="@style/button_text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Intermediate Word List"
        android:id="@+id/selectionButtonTwo"
        android:background="@drawable/button_background"
        style="@style/button_text"
        android:layout_below="@+id/selectionButtonOne"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Advanced Word List"
        android:id="@+id/selectionButtonThree"
        android:background="@drawable/button_background"
        style="@style/button_text"
        android:layout_below="@+id/selectionButtonTwo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Adjectives Word List"
        android:id="@+id/selectionButtonFour"
        android:background="@drawable/button_background"
        style="@style/button_text"
        android:layout_below="@+id/selectionButtonThree"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Verbs Word List"
        android:id="@+id/selectionButtonFive"
        android:background="@drawable/button_background"
        style="@style/button_text"
        android:layout_below="@+id/selectionButtonFour"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
